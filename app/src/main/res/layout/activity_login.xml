<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/bg_login"
        android:gravity="center"
        android:background="@color/bg_login"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:src="@drawable/Mandiritaspenlogo" />


    </RelativeLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:orientation="vertical"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageButton
                    android:id="@+id/makerlogin"
                    android:text="@string/makerlogin"
                    android:background="@drawable/custom_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginRight="0dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ReleaserLogin"/>

                <ImageButton
                    android:id="@+id/checkerlogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="250dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_button"
                    android:src="@drawable/CheckerLogin"
                    android:text="@string/checkerlogin"
                    android:textColor="@color/white" />

                <ImageButton
                    android:id="@+id/releaserlogin"
                    android:text="@string/releaserlogin"
                    android:background="@drawable/custom_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/MakerLogin"/>



            </RelativeLayout>


        </androidx.cardview.widget.CardView>




    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>